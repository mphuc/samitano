<section class="page-heading" >
   <div class="container">
      <div class="row">
         <div class="col-md-12">
            <h1 class="text-left">HỖ TRỢ</h1>
            
         </div>
      </div>
   </div>
</section>
<div class="content">
   <div class="container">
      <div class="">
         
      <div class="row">
         <div class="">
            <div class="card" style="padding: 20px;">
            <a href="/new-support">
               <button class="btn btn-primary btn-create-offer"><i class="fa fa-plus"></i> Tạo yêu cầu hỗ trợ</button>
            </a>
            </div>
         </div>
      </div>

      <div class="row">
         <div class="col-md-12">
            <div class="card">
                  <table id="login_history" class="table table-striped table-no-bordered table-hover" style="width:100%;cellspacing:0" >
                     <thead>
                        <tr>
                           <th>Thời gian </th>
                           <th>Chủ đề</th>
                           <th>Trạng thái</th>
                        </tr>
                     </thead>
                     <tbody>
                        {{#each support}} 
                        <tr>
                           <td>{{prettifyDate this.date}} </td>
                           <td>
                              <a href="/support/ticket/{{this.token}}">
                                 {{this.subject}}
                              </a>
                           </td>
                           <td>
                              {{#if_eq this.status '1'}} 
                                 <span class="label label-success"> Đã trả lời</span>
                              {{/if_eq}}

                              {{#if_eq this.status '0'}} 
                                 <span class="label label-default">Chưa trả lời</span>
                              {{/if_eq}}  
                           </td>
                        </tr>
                        {{/each}} 
                     </tbody>
                  </table>
               </div>
            </div>
         </div>

         
      </div>
   </div>
</div>