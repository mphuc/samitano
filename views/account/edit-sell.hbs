<section class="page-heading" >
   <div class="container">
      <div class="row">
         <div class="col-md-12">
            <h1 class="text-left">Sửa quảng cáo</h1>
         </div>
      </div>
   </div>
</section>
<div class="content wallet-balance" style="margin-bottom: 80px;">
   <div class="container" id="create_offer">
      <div class="row">
         <div class="col-sm-12">
            <div data-reactroot="">
               <div>
                  <div class="">
                     <div class="box-body text-left">
                        <form id="EditSellOrder">
                           <div class="offer-details">
                              <h4>Giá</h4>
                              <div class="offer-extra-fields">
                                 <div class="form-group price">
                                    <label>Giá STC/VND</label>
                                    <div class="row">
                                       <div class="col-md-7">
                                          <div>
                                             <div class="remi-colorized-field undefined">
                                                <div class="input-group"><input data-awnum="" class="form-control" name="price" value="{{satoshivns order.price}}"><span class="input-group-addon">VND</span></div>
                                                <div></div>
                                             </div>
                                          </div>
                                       </div>
                                       <div class="col-md-5"><span class="explanation">Giá 1 STC theo VND</span></div>
                                    </div>
                                 </div>
                                 <div>
                                    <div class="form-group currency">
                                       <label>Đơn vị tiền tệ</label>
                                       <div class="row">
                                          <div class="col-md-7">
                                             <div>
                                                <div class="remi-colorized-field undefined">
                                                   <select class="form-control" name="currency">
                                                      <option value="VND">VND</option>
                                                   </select>
                                                   <div></div>
                                                </div>
                                             </div>
                                          </div>
                                          <div class="col-md-5"><span class="explanation">Đơn vị tiền tệ để đổi lấy STC</span></div>
                                       </div>
                                    </div>
                                 </div>
                              </div>
                           </div>
                           <hr>
                           <div>
                              <div class="offer-details limitation-section">
                                 <h4>Giới hạn</h4>
                                 <div class="offer-extra-fields">
                                    <div class="form-group min_amount">
                                       <label>Số STC tối thiểu</label>
                                       <div class="row">
                                          <div class="col-md-7">
                                             <div>
                                                <div class="remi-colorized-field undefined">
                                                   <div class="input-group"><input data-awnum="" class="form-control" name="min_amount" value="{{satoshi order.min_amount}}"><span class="input-group-addon">STC</span></div>
                                                   <div></div>
                                                </div>
                                             </div>
                                          </div>
                                          <div class="col-md-5"><span class="explanation">Số  STC tối thiểu trong một giao dịch. (ít nhất là 0.001 STC)</span></div>
                                       </div>
                                    </div>
                                    <div class="form-group max_amount">
                                       <label>Số STC tối đa</label>
                                       <div class="row">
                                          <div class="col-md-7">
                                             <div>
                                                <div class="remi-colorized-field undefined">
                                                   <div class="input-group"><input data-awnum="" class="form-control" name="max_amount" value="{{satoshi order.max_amount}}"><span class="input-group-addon">STC</span></div>
                                                   <div></div>
                                                </div>
                                             </div>
                                          </div>
                                          <div class="col-md-5"><span class="explanation">Tổng số STC mà bạn sẽ mua.</span></div>
                                       </div>
                                    </div>
                                 </div>
                              </div>
                              <p class="error"></p>
                              <hr>
                           </div>
                           <input type="hidden" name="MarketName" value="VND-STC">
                           <input type="hidden" class="token_crt" name="token_crt" value="{{token_crt}}">
                           <input type="hidden" name="id_order" value="{{order._id}}">
                           <div class="form-group">
                              <button type="submit" class="btn-save-offer btn btn-primary">
                              Cập nhập
                              </button>
                           </div>
                        </form>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>