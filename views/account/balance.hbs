<section class="page-heading" >
   <div class="container">
      <div class="row">
         <div class="col-md-12">
            <h1 class="text-left">Ví của bạn</h1>
            <h1 class="ng-binding ng-hide"></h1>
         </div>
      </div>
   </div>
</section>
<div class="content wallet" style="margin-bottom: 80px;">
   <div class="container" >
      <div class="row">
         <div class="col-md-12">
            <div class="card">
               
               <div class="content balance_page">
                  <h4 style="font-weight: 500">Số dư tài khoản</h4>
                  <table border="1" cellpadding="0" cellspacing="0"  style="border-collapse:collapse;"  class="table table-striped table-bordered table-hover" style="width:100%;" >
                     <thead>
                        <tr>
                           <th style="text-align: center;"><i class="ti-plus"></i></th>
                           <th>Loại</th>
                           <th>Đơn vị</th>
                           <th>Số dư tài khoản</th>
                           <th>Đang chờ</th>
                        </tr>
                        <tr>
                           <td class="text-center"><button style="margin-right: 10px;" data-toggle="modal" data-target="#modalDepositBTC" class="btn btn-social btn-fill btn-twitter">Nạp </button><button data-toggle="modal" data-target="#modalWithdrawBTC" class="btn btn-social btn-fill btn-twitter crt_button">Rút</button></td>
                           <td>Việt nam đồng</td>
                           <td>VND</td>
                           <td>{{satoshi user.balance.bitcoin_wallet.available}}</td>
                           <td>{{satoshi balance.btc}}</td>
                        </tr>
                        
                        <tr>
                           <td class="text-center"><button style="margin-right: 10px;" data-toggle="modal" data-target="#modalDepositCOIN" class="btn btn-social btn-fill btn-twitter">Nạp </button><button data-toggle="modal" data-target="#modalWithdrawCOIN" class="btn btn-social btn-fill btn-twitter crt_button">Rút</button></td>
                           <td>Santacoin</td>
                           <td>STC</td>
                           <td>{{satoshi user.balance.coin_wallet.available}}</td>
                           <td>{{satoshi balance.coin}}</td>
                        </tr>
                        
                     </thead>
                     <tbody></tbody>
                  </table>
                  <div class="clearfix"></div>
                   <div class="row">
                     <div class="col-md-6">
                        <h4 style="font-weight: 500">NẠP ĐANG CHỜ</h4>
                        <div id="history-deposit-pending"></div>
                     </div>
                     <div class="col-md-6">
                        <h4 style="font-weight: 500">LỊCH SỬ NẠP</h4>
                        <div id="history-deposit-finish"></div>
                     </div>
                     <div class="col-md-6">
                        <h4 style="font-weight: 500">RÚT ĐANG CHỜ</h4>
                        <div id="history-withdraw-pendding"></div>
                     </div>
                     <div class="col-md-6">
                        <h4 style="font-weight: 500">LỊCH SỬ RÚT</h4>
                        <div id="history-withdraw-finish"></div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>