<div class="content">
   <div class="container-fluid">
      <div class="row">
         
         <div class="col-md-12">
         
            <div class="card">

               <div class="content">
                  <div class="col-md-12">
                     <a href="/qwertyuiop/admin/new-bank" class="pull-right">
                        <button class="btn btn-success">Tạo mới</button>
                     </a>
                  </div>   
                  <div class="material-datatables">
                     
                     <table style="margin-top: 50px;" id="" class="table table-striped table-bordered table-hover" style="width:100%;cellspacing:0">
                        <thead>
                           <tr>
                              <th>Tên tài khoản</th>
                              <th>Số tài khoản</th>
                              <th>Chi nhánh</th>
                              <th>Tên ngân hàng</th>
                              <th></th>
                           </tr>
                        </thead>
                        <tbody>
                           {{#each data}} 
                           <tr>
                              <td class="text-center">{{this.amount_horder}} </td>
                              <td class="text-center">{{this.amount_number}}</td>
                              <td class="text-center">{{this.bank_address}}</td>
                              
                              <td class="text-center">{{this.bank_name}}</td>
                              
                              <td class="text-center">
                                 <a style="    " href="/qwertyuiop/admin/edit-bank/{{this._id}}"><span class="label label-success">Sửa</span></a> 
                                 <a style="    " href="/qwertyuiop/admin/remove-bank/{{this._id}}"><span class="label label-danger">Xóa</span></a> 
                              </td>
                           </tr>
                           {{/each}} 
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>